{
  "name": "Grocy Item Scanner",
  "version": "1.0.0",
  "slug": "grocy_itemscan",
  "description": "An add-on for scanning items into Grocy, integrated with Home Assistant.",
  "arch": ["aarch64", "amd64", "armv7", "armhf", "i386"],
  "startup": "services",
  "init": false,
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8099,
  "ingress_entry": "/",
  "options": {
    "api_key": "YOUR_API_KEY",
    "grocy_url": "http://your-grocy-instance"
  },
  "schema": {
    "api_key": "str",
    "grocy_url": "str"
  },
  "environment": {
    "GROCY_API_KEY": "{{ options.api_key }}",
    "GROCY_URL": "{{ options.grocy_url }}"
  },
  "ports": {
    "8099/tcp": 8099
  }
}
